extends layout

block content
    h1 Login 
        span.fas.fa-sign-in-alt(style="font-size: 48px")
    form(method='POST', action='/users/login')
        .form-group
            label Username:
            input.form-control(name='username' type='text' autofocus)
        .form-group
            label Password:
            input.form-control(name='password' type='password')
        input.btn.btn-primary(value='Login' type='submit')
