extends layout

block content
    h1 Edit Player
    form(method='POST', action='/players/edit/'+player.id)
        .form-group
            label Name:
            input.form-control(name='name' type='text' value=player.name autofocus)
        .form-group
            label Greeting:
            input.form-control(name='greeting' type='text' value=player.greeting)
        .form-group
            label Gender:
            select.form-control(name='gender' value=player.gender)
                option.form-control(value="" disabled selected) Please select a gender
                if player.gender == "Male"
                    option.form-control(value="Male" selected) Male
                    option.form-control(value="Female") Female
                else
                    option.form-control(value="Male") Male
                    option.form-control(value="Female" selected) Female
        .form-group
            label Mobile:
            input.form-control(name='mobile' type='tel' value=player.mobile)
        a.btn.btn-secondary.mr-1(href='/players') Back
        input.btn.btn-primary(value='Submit' type='submit')
